<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Contenedor horizontal para logo, nombre, botón y favorito -->

        <!-- Descripción de la institución -->

        <!-- Línea divisoria -->

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="71dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLogoUdelaSerena"
                android:layout_width="90dp"
                android:layout_height="94dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvNombreUdelaSerena"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ivFavorito"
                android:layout_width="54dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/favorito"
                android:onClick="toggleFavorite" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDescripcionUdelaSerena"
            android:layout_width="375dp"
            android:layout_height="88dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnMoreDetailsUdelaSerena"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:text="Más Detalles" />


    </LinearLayout>
</androidx.cardview.widget.CardView>